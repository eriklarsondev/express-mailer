{
  "name": "express-mailer",
  "version": "0.1.0",
  "author": "Erik Larson",
  "description": "Express server that utilizes Nodemailer service to send outgoing emails",
  "keywords": [],
  "license": "MIT",
  "main": "dist-server/index.js",
  "scripts": {
    "babel": "babel src --out-dir dist-server",
    "build": "npm run babel",
    "restart": "rimraf dist-server && npm run babel && node dist-server",
    "dev": "nodemon --exec npm run restart",
    "start": "npm run build && node dist-server",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "nodemailer": "^6.9.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.6",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "nodemon": "^3.1.5",
    "rimraf": "^6.0.1"
  }
}
